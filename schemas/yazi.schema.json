{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"$schema": {
			"default": "https://yazi-rs.github.io/schemas/yazi.schema.json",
			"type": "string"
		},
		"manager": {
			"type": "object",
			"properties": {
				"layout": {
					"type": "array",
					"items": {
						"type": "integer",
						"minimum": 0,
						"maximum": 8
					},
					"minItems": 3
				},
				"sort_by": {
					"enum": [
						"none",
						"alphabetical",
						"created",
						"modified",
						"natural",
						"size"
					]
				},
				"sort_sensitive": { "type": "boolean" },
				"sort_reverse": { "type": "boolean" },
				"sort_dir_first": { "type": "boolean" },
				"linemode": { "enum": ["none", "size", "permissions", "mtime"] },
				"show_hidden": { "type": "boolean" },
				"show_symlink": { "type": "boolean" }
			},
			"additionalProperties": false
		},
		"preview": {
			"type": "object",
			"properties": {
				"tab_size": { "$ref": "#/$defs/u8" },
				"max_width": { "$ref": "#/$defs/u32" },
				"max_height": { "$ref": "#/$defs/u32" },
				"cache_dir": { "type": "string" }
			},
			"additionalProperties": false
		},
		"opener": {
			"additionalProperties": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"exec": { "type": "string" },
						"block": { "type": "boolean" },
						"orphan": { "type": "boolean" },
						"display_name": { "type": "string" }
					},
					"required": ["exec"]
				}
			}
		},
		"open": {
			"type": "object",
			"properties": {
				"rules": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"mime": { "type": "string" },
							"name": { "type": "string" },
							"use": {
								"oneOf": [
									{ "type": "array", "items": { "type": "string" } },
									{ "type": "string" }
								]
							}
						},
						"required": ["use"],
						"oneOf": [
							{
								"required": ["mime"]
							},
							{
								"required": ["name"]
							}
						]
					}
				}
			},
			"additionalProperties": false
		},
		"tasks": {
			"type": "object",
			"properties": {
				"micro_workers": { "$ref": "#/$defs/u8" },
				"macro_workers": { "$ref": "#/$defs/u8" },
				"bizarre_retry": { "$ref": "#/$defs/u8" },
				"suppress_preload": { "type": "boolean" },
				"image_alloc": {
					"$ref": "#/$defs/u32"
				},
				"image_bound": {
					"type": "array",
					"items": { "$ref": "#/$defs/u16" },
					"minItems": 2,
					"maxItems": 2
				}
			},
			"additionalProperties": false
		},
		"plugins": {
			"type": "object",
			"properties": {
				"preload": {
					"type": "array",
					"items": { "type": "string" }
				}
			},
			"additionalProperties": false
		},
		"log": {
			"type": "object",
			"properties": {
				"enabled": { "type": "boolean" }
			},
			"additionalProperties": false
		}
	},
	"$defs": {
		"u8": {
			"type": "integer",
			"minimum": 0,
			"maximum": 255
		},
		"u16": {
			"type": "integer",
			"minimum": 0,
			"maximum": 65535
		},
		"u32": {
			"type": "integer",
			"minimum": 0,
			"maximum": 4294967295
		}
	}
}
